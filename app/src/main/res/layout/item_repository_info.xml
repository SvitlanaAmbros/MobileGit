<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_profile"
        android:layout_width="@dimen/image_size"
        android:layout_height="@dimen/image_size"
        app:srcCompat="@drawable/no_image"
        android:layout_marginTop="@dimen/image_item_margin_top_bottom"
        android:layout_marginBottom="@dimen/image_item_margin_top_bottom"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/text_item_margin_start"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/image_item_margin_top_bottom"
        android:layout_marginBottom="@dimen/image_item_margin_top_bottom">

        <TextView
            android:id="@+id/tv_proj_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Facebook"
            android:textColor="@color/primaryText"
            android:textSize="@dimen/primary_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </LinearLayout>


</LinearLayout>